pipeline {
    agent any
    
    environment {
        PYTHONPATH = "${WORKSPACE}"
    }
    
    stages {
        stage('Checkout') {
            steps {
                git(
                    url: 'https://github.com/Dedolaa/alx-backend-python.git',
                    credentialsId: 'github-credentials',
                    branch: 'main'
                )
            }
        }
        
        stage('Setup Virtual Environment') {
            steps {
                dir('messaging_app') {
                    sh 'python3 -m venv venv'
                    sh '. venv/bin/activate && pip install --upgrade pip'
                }
            }
        }
        
        stage('Install Dependencies') {
            steps {
                dir('messaging_app') {
                    sh '. venv/bin/activate && pip install -r requirements.txt'
                }
            }
        }
        
        stage('Run Tests') {
            steps {
                dir('messaging_app') {
                    sh '. venv/bin/activate && python -m pytest tests/ -v --junitxml=test-results/junit.xml'
                }
            }
            post {
                always {
                    junit 'messaging_app/test-results/junit.xml'
                }
            }
        }
        
        stage('Generate Test Report') {
            steps {
                dir('messaging_app') {
                    sh '. venv/bin/activate && python -m pytest tests/ -v --html=test-results/report.html --self-contained-html || true'
                }
            }
            post {
                always {
                    publishHTML(target: [
                        allowMissing: true,
                        alwaysLinkToLastBuild: true,
                        keepAll: true,
                        reportDir: 'messaging_app/test-results',
                        reportFiles: 'report.html',
                        reportName: 'Pytest HTML Report'
                    ])
                }
            }
        }
    }
}